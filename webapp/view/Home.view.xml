<mvc:View controllerName="sapmarco.projectpages.controller.Home" displayBlock="true" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<content>
			<l:BlockLayout>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell class="headerBar" width="100%" backgroundColorSet="ColorSet5" backgroundColorShade="ShadeC">
						<FlexBox alignItems="Center" alignContent="Center" justifyContent="Center" backgroundDesign="Transparent" direction="Column">
							<Avatar class="Avatar" showBorder="true" displaySize="L" src="./resources/img/myself.png" fallbackIcon="sap-icon://person-placeholder"/>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<FlexBox id="socialsGrouped" class="sapUiTinyMarginTop" direction="Row" justifyContent="Center">
							<html:a href="https://linkedin.com/in/dev-marco-beier" target="_blank" rel="noopener">
								<Image class="setOpacity setMinSeperator" src="./resources/img/Logo_LinkedIn.svg" alt="Linkedin Logo" width="5vw" height="5vh"/>
							</html:a>
							<html:a href="https://xing.com/profile/Marco_Beier8/cv" target="_blank" rel="noopener">
								<Image class="setOpacity setMinSeperator" src="./resources/img/Logo_Xing.svg" alt="Xing Logo" width="5vw" height="5vh"/>
							</html:a>
							<html:a href="https://github.com/SAPMarco" target="_blank" rel="noopener">
								<Image class="setOpacity setMinSeperator" src="./resources/img/Logo_Github.svg" alt="Github Logo" width="5vw" height="5vh"/>
							</html:a>
							<html:a href="https://twitter.com/Wridgeu" target="_blank" rel="noopener">
								<Image class="setOpacity setMinSeperator" src="./resources/img/Logo_Twitter.svg" alt="Twitter Logo" width="5vw" height="5vh"/>
							</html:a>
							<html:a href="https://people.sap.com/marcobeier" target="_blank" rel="noopener">
								<Image class="setOpacity setMinSeperator" src="./resources/img/Logo_SAP_1.svg" alt="SAP Logo Community" width="5vw" height="5vh"/>
							</html:a>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<FlexBox class="setMiddle" width="100%" direction="Row">
							<Text class="text" text="{i18n>introText}"/>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow class="cV setMiddle" id="cVRow">
					<l:BlockLayoutCell>
						<FlexBox width="100%" direction="Row">
							<Text class="text" text="{i18n>mainText}"/>
						</FlexBox>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<FlexBox direction="Column">
							<FlexBox justifyContent="Center">
								<Tree id="cvTree" items="{path: 'cv>/', parameters:{arrayNames: ['nodes']}}">
									<CustomTreeItem>
										<Text renderWhitespace="true" text="{cv>description}"/>
										<Link href="{cv>website}" text="{cv>companie}" target="_blank"/>
										<Label text="{cv>position}"/>
										<FlexBox direction="Column">
											<FlexBox direction="Row">
												<Text renderWhitespace="true" text="{cv>textTo}"/>
												<Label text="{cv>to}"/>
											</FlexBox>
											<FlexBox direction="Row">
												<Text renderWhitespace="true" text="{cv>textFrom}"/>
												<Label text="{cv>from}"/>
											</FlexBox>
										</FlexBox>
									</CustomTreeItem>
								</Tree>
							</FlexBox>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<FlexBox class="sapUiTinyMarginTop setMiddle" width="100%" direction="Row">
							<Text class="title" text="{i18n>sectionSkills}"/>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<FlexBox class="sapUiTinyMarginTop" wrap="Wrap" direction="Row" justifyContent="Center" alignItems="Center">
							<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
								<tiles>
									<GenericTile header="SAP" subheader="ERP, EWM, SolMan">
										<TileContent>
											<ImageContent src="./resources/img/saplogo_small.png" />
										</TileContent>
									</GenericTile>
									<GenericTile header="ABAP">
										<TileContent>
											<ImageContent src="./resources/img/abap.png" />
										</TileContent>
									</GenericTile>
									<GenericTile header="UI5" subheader="OpenUI5, SAPUI5">
										<TileContent>
											<ImageContent src="./resources/img/Logo_UI5.png" />
										</TileContent>
									</GenericTile>
								</tiles>
							</SlideTile>
							<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
								<tiles>
									<GenericTile header="JavaScript">
										<TileContent>
											<ImageContent src="./resources/img/Logo_JS.svg" />
										</TileContent>
									</GenericTile>
									<GenericTile header="HTML5">
										<TileContent>
											<ImageContent src="./resources/img/Logo_HTML5.svg" />
										</TileContent>
									</GenericTile>
									<GenericTile header="CSS3">
										<TileContent>
											<ImageContent src="./resources/img/Logo_CSS.svg" />
										</TileContent>
									</GenericTile>
								</tiles>
							</SlideTile>
							<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
								<tiles>
									<GenericTile header="Git" subheader="github, gitlab">
										<TileContent>
											<ImageContent src="./resources/img/giticon.png"/>
										</TileContent>
									</GenericTile>
									<GenericTile header="Github">
										<TileContent>
											<ImageContent src="./resources/img/Logo_Github.svg"/>
										</TileContent>
									</GenericTile>
									<GenericTile header="Gitlab">
										<TileContent>
											<ImageContent src="./resources/img/gitlab.png"/>
										</TileContent>
									</GenericTile>
								</tiles>
							</SlideTile>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<FlexBox class="sapUiTinyMarginTop setMiddle" width="100%" direction="Row">
							<Text class="title" text="{i18n>wiki}"/>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<FlexBox class="sapUiTinyMarginTop setMiddle" width="100%" direction="Row">							
							<Button text="Go To" iconFirst="false" icon="sap-icon://arrow-right" press="onWiki"></Button>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
		</content>
		<footer>
			<Toolbar id="footerToolbar" class="toolbar" design="Info">
				<core:Icon src="sap-icon://lightbulb" class="size2" color="#ffffff" press=".onThemeSwap('sap_fiori_3_dark')" alt="Toggle Theme" tooltip="{i18n>themeToggleTooltip}"/>
				<ToolbarSpacer/>
				<Text class="footerText" text="{i18n>footerText}">
					<layoutData>
						<ToolbarLayoutData shrinkable="true"/>
					</layoutData>
				</Text>
				<ToolbarSpacer/>
				<core:Icon src="sap-icon://sap-ui5" class="size2" color="#ffffff" press="onUI5IconPress" alt="UI5 Version" tooltip="{i18n>versionInfoTooltip}"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>