 <mvc:View controllerName="sapmarco.projectpages.controller.Main"
	displayBlock="true"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<App id="idAppControl">
		<pages>
			<Page showHeader="false">
				<content>
					<l:BlockLayout>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell class="HeaderBar" width="100%" backgroundColorSet="ColorSet5" backgroundColorShade="ShadeC">
						 		<FlexBox alignItems="Center" 
								 		 alignContent="Center" 
										 justifyContent="Center"
										 backgroundDesign="Transparent"
										 direction="Column">
											<Avatar class="Avatar" showBorder="true" displaySize="L" src="./resources/img/myself.jpg">
											</Avatar>
								</FlexBox>
									<FlexBox class="sapUiTinyMarginTop" direction="Row" justifyContent="Center">
										<html:a class="socialImage"  href="https://linkedin.com/in/dev-marco-beier" target="_blank">
											<Image src="./resources/img/linkedin_brands.svg"
												width="5vw"
												height="5vh">
											</Image>
										</html:a>
										<html:a class="socialImage" href="https://xing.com/profile/Marco_Beier8/cv" target="_blank">
											<Image src="./resources/img/xing-square-brands.svg"
												width="5vw"
												height="5vh">
											</Image>
										</html:a>									
										<html:a class="socialImage" href="https://github.com/SAPMarco" target="_blank">
											<Image src="./resources/img/github-square-brands.svg"
												width="5vw"
												height="5vh">
											</Image>
										</html:a>									
										<html:a class="socialImage" href="https://twitter.com/Wridgeu" target="_blank">
											<Image src="./resources/img/twitter-square-brands.svg"
												width="5vw"
												height="5vh">
											</Image>
										</html:a>
									</FlexBox>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell>
									<FlexBox direction="Row" justifyContent="Center">								
										<Text text="{lm>/IntroText}"></Text>
									</FlexBox>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell class="cV" backgroundColorSet="ColorSet10" backgroundColorShade="ShadeC">
								<FlexBox direction="Column">
									<FlexBox justifyContent="Center">
									<Tree id="cvTree" items="{path: 'cv>/', parameters:{arrayNames: ['nodes']}}">									
										<CustomTreeItem>
											<Text renderWhitespace="true" text="{cv>description}"></Text>
											<Link href="{cv>website}" text="{cv>companie}" target="_blank"/>
											<Label text="{cv>position}"/>
											<FlexBox direction="Column">
												<FlexBox direction="Row">
													<Text renderWhitespace="true" text="{cv>textTo}"></Text>															
													<Label text="{cv>to}"/>												
												</FlexBox>			
												<FlexBox direction="Row">
													<Text renderWhitespace="true" text="{cv>textFrom}"></Text>
													<Label text="{cv>from}"/>												
												</FlexBox>			
											</FlexBox>										
										</CustomTreeItem>
									</Tree>
									</FlexBox>
								</FlexBox>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
					</l:BlockLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>