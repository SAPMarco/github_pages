 <mvc:View controllerName="sapmarco.projectpages.controller.Main"
	displayBlock="true"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<App id="idAppControl">
		<pages>
			<Page showHeader="false">
				<content>
					<l:BlockLayout>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell class="HeaderBar" width="100%" backgroundColorSet="ColorSet5" backgroundColorShade="ShadeA">
						 		<FlexBox alignItems="Center" 
								 		 alignContent="Center" 
										 justifyContent="Center"
										 backgroundDesign="Transparent"
										 direction="Column">
											<Avatar class="Avatar" showBorder="true" displaySize="M" src="./resources/img/myself.jpg">
											</Avatar>
								</FlexBox>
									<FlexBox class="sapUiTinyMarginTop" direction="Row" justifyContent="Center">
									<html:a class="socialImage"  href="https://linkedin.com/in/dev-marco-beier" target="_blank">
										<Image src="./resources/img/linkedin_brands.svg"
											width="5vw"
											height="5vh">
										</Image>
									</html:a>
									<html:a class="socialImage" href="https://www.xing.com/profile/Marco_Beier8/cv" target="_blank">
										<Image src="./resources/img/xing-square-brands.svg"
											width="5vw"
											height="5vh">
										</Image>
									</html:a>									
									<html:a class="socialImage" href="https://github.com/SAPMarco" target="_blank">
										<Image src="./resources/img/github-square-brands.svg"
											width="5vw"
											height="5vh">
										</Image>
									</html:a>									
									<html:a class="socialImage" href="https://twitter.com/Wridgeu" target="_blank">
										<Image src="./resources/img/twitter-square-brands.svg"
											width="5vw"
											height="5vh">
										</Image>
									</html:a>
									</FlexBox>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell>
								<FlexBox direction="Column">
									<Text class="IntroTextHeader" text="{lm>/IntroHeader}"></Text>
									<FlexBox direction="Row">
										<Text text="{lm>/IntroText}"></Text>
									</FlexBox>
								</FlexBox>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow>
							<l:BlockLayoutCell>
								<FlexBox>
									<Tree items="{path: 'cv>/', parameters:{arrayNames: ['nodes']}}">									
										<CustomTreeItem>
											<Label text="{cv>companies}" />
										</CustomTreeItem>
									</Tree>
								</FlexBox>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
					</l:BlockLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>