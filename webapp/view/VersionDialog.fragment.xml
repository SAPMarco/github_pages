<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Info"
      verticalScrolling="false"
      horizontalScrolling="false">
        <FlexBox direction="Row" justifyContent="Center">
            <FlexBox direction="Column">
                <FlexBox direction="Row" justifyContent="Start">
                    <Label text="UI5 Version: "/>
                    <Text renderWhitespace="true" text=" {versionInfo>/version}"/>
                </FlexBox>                
                <FlexBox direction="Row" justifyContent="Start">
                    <Label text="Versionsname: "/>
                    <Text renderWhitespace="true" text=" {versionInfo>/name}"/>
                </FlexBox>
            </FlexBox>
        </FlexBox>
        <beginButton>
            <Button text="close" press="onCloseDialog"/>
        </beginButton>
   </Dialog>
</core:FragmentDefinition>