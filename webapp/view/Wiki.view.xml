<mvc:View controllerName="sapmarco.projectpages.controller.Wiki" displayBlock="true" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc">
    <Page showHeader="true" showNavButton="true" navButtonPress="onBackHome">
        <content>
            <Button text="Markdown_Test" press="onMarkdown"></Button>
            <html:div class="container" id="container">
                <html:div class="sidenav" id="markdownSidebar">Test_SideNav</html:div>
                <html:div class="main" id="markdownContent">Test</html:div>
            </html:div>
        </content>
        <footer>
            <Toolbar id="footerToolbar" class="toolbar" design="Info">
                <core:Icon src="sap-icon://lightbulb" class="size2" color="#ffffff" press=".onThemeSwap('sap_fiori_3_dark')" alt="Toggle Theme" tooltip="{i18n>themeToggleTooltip}"/>
                <ToolbarSpacer/>
                <Text class="footerText" text="{i18n>footerText}">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="true"/>
                    </layoutData>
                </Text>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>